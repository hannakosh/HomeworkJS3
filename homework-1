const treeHeight = 8;

let maxStarAmount = treeHeight * 2 - 1;
for (let rowNumber = 1; rowNumber <= treeHeight; rowNumber++) {
    let starAmount = rowNumber * 2 - 1;
    let spaceAmount = (maxStarAmount - starAmount) / 2;
    let star = ' '.repeat(spaceAmount);
    star = star + '*'.repeat(starAmount);
    console.log(star);
}